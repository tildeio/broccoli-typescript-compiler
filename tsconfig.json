{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "newLine": "LF",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "./index.ts",
    "./lib/**/*.ts",
    "./tests/*-test.ts"
  ]
}
